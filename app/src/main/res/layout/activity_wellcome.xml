<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wellcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context="tech_ubru.com.borthesis.Wellcome">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imv_book"
        android:layout_width="match_parent"
        android:src="@drawable/welcome_book"
        android:layout_height="110dp"  />
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_margin="8dp"
        android:text="Wellcome"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_ubru"
            android:layout_weight="1"
            android:src="@drawable/ubru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/imv_itech"
           android:src="@drawable/itech"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
